<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="600.0" prefWidth="700.0" style="" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <HBox id="HBox" alignment="CENTER" spacing="5.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
            <children>
                <Button fx:id="btnLoadData" onAction="#onLoadData" prefHeight="-1.0" prefWidth="-1.0" text="load data" />
                <Button fx:id="btnEdit" onAction="#onEdit" prefHeight="-1.0" prefWidth="-1.0" text="edit selected record" />
                <TextField fx:id="tfSelected" disable="true" promptText="selected" HBox.hgrow="ALWAYS" />
            </children>
        </HBox>
        <TableView fx:id="tableView" editable="true" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="45.0" />
    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
</AnchorPane>
